@{
    ViewBag.Title = "Services";
    ViewBag.IndexNav = 2;
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            
            <div class="row">
                <div class="col-md-12">
                    <!-- DATA TABLE -->
                    <div class="table-data__tool">

                            <div class="table-data__tool-left">
                                <h3 class="title-5">Danh Sách Dịch Vụ</h3>
                            </div>
                            <form action="/Admin/Service/TimKiem" method="post">
                                <div>
                                    <input type="text" name="ten" class="from-control" style="height:37px" />
                                    <button type="submit" class="btn btn-danger">Tìm Kiếm</button>
                                </div>
                            </form>

                            <div class="table-data__tool-right">
                                <a href="/Admin/Service/AddService" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                    <i class="zmdi zmdi-plus"></i>Thêm Dịch Vụ
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive table-responsive-data2">
                            <table class="table table-data2">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Tên</th>
                                        <th>Mô Tả</th>
                                        <th>Giá</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var S in ViewBag.Services)
                                    {
                                        <tr class="tr-shadow">
                                            <td>
                                                <div class="image">
                                                    <a href="#">
                                                        <img src="~/Uploads/@S.Image" alt="John Doe" />
                                                    </a>
                                                </div>
                                            </td>
                                            <td>@S.Name</td>

                                            <td>@S.ServiceDescription</td>
                                            <td>
                                                @S.Price
                                            </td>

                                            <td>
                                                <div class="table-data-feature">
                                                    <a class="item" data-toggle="tooltip" data-placement="top" title="Send" href="/Admin/Service/ServiceDetail/@S.ID">
                                                        <i class="zmdi zmdi-mail-send"></i>
                                                    </a>

                                                    <a class="item" data-toggle="tooltip" data-placement="top" href="/Admin/Service/DeleteService/@S.ID" title="Delete">
                                                        <i class="zmdi zmdi-delete"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="spacer"></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- END DATA TABLE -->
                    </div>
            </div>
        </div>
    </div>
</div>