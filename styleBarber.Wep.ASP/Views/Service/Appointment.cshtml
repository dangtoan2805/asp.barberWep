
@{
    ViewBag.Title = "Appointment";
    ViewBag.NamePage = "Appointment";
}

@{ Html.RenderPartial("_PageBar");}

<div id="appointment" class="section wb">
    <div class="container">
        <div class="section-title row text-center">
            <div class="col-md-8 offset-md-2">
                <small>LET'S MAKE AN APPOINTMENT FOR YOUR LIFE</small>
                <h3>Book now</h3>
            </div>
        </div><!-- end title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="contact_form">
                    <form action="/Service/SendAppointment" method="post">
                        <div class="form-row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="FirstName" id="FirstName" class="form-control" placeholder="First Name">
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="LastName" id="LastName" class="form-control" placeholder="Last Name">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input type="email" name="Email" id="Email" class="form-control" placeholder="Email">
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input type="tel" name="Phone" id="Phone" class="form-control" placeholder="Phone" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input type="date" name="Time" id="Time" class="form-control" placeholder="Time">
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <select id="basic" class="form-control">
                                    <option value="selecttime">Select Time</option>
                                    <option value="Weekdays">Weekdays</option>
                                    <option value="Weekend">Weekend</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="Note" id="comments" rows="6" placeholder="Give us more details.."></textarea>
                        </div>

                        <div class="form-btn text-center">
                            <button type="submit" value="SEND" id="submit" class="btn btn-light btn-radius btn-brd grd1 btn-block subt">Get Appointment</button>
                        </div>
                    </form>
                </div>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

@{Html.RenderPartial("_Footer");}

