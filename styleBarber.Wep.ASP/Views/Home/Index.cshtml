@{
    ViewBag.Title = "Home Page";
}

<!--Slider-->
<div id="home" class="parallax">
    <div id="full-width" class="owl-carousel owl-theme home-hero">
        <div class="text-center item slider-01 display-table overlay">
            <div class="display-table-cell">
                <div class="big-tagline text-center">
                    <h2>
                        <strong>SMBarber</strong><br>
                        Việt Nam
                    </h2>
                    <p class="lead">SMBarber với nhiều mẫu tóc đẹp, thịnh hành nhất, <br>Hãy liên hệ chúng tôi tại đây!</p>
                    <a href="#" class="btn btn-light btn-radius btn-brd grd1 effect-1 butn">Liên Hệ</a>
                </div>
            </div>
        </div>
        <div class="text-center item slider-02 display-table overlay">
            <div class="display-table-cell">
                <div class="big-tagline text-center">
                    <h2>
                        <strong>SMBarber</strong><br>
                        Việt Nam
                    </h2>
                    <p class="lead">Dịch Vụ Giá Siêu Ưu Đã Khách Lần Đầu đến.</p>
                    <a href="#" class="btn btn-light btn-radius btn-brd grd1 effect-1 butn">Liên Hệ</a>
                </div>
            </div>
        </div>
        <div class="text-center item slider-03 display-table overlay">
            <div class="display-table-cell">
                <div class="big-tagline text-center">
                    <h2>
                        <strong>SMBarber</strong><br>
                        Việt Nam
                    </h2>
                    <p class="lead">Phục Vụ Tận Tình, Tư Vấn Cắt Tóc Chuyên Nghiệp.</p>
                    <a href="#" class="btn btn-light btn-radius btn-brd grd1 effect-1 butn">Liên Hệ</a>
                </div>
            </div>
        </div>
    </div>
</div><!-- end section -->
<!-- Page Content -->
<div class="section wb">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-left">
                <div class="message-box">
                    <h4>Giới Thiệu</h4>
                    <h2>Chào Mừng Đến với SMBarber</h2>
                    <p class="lead">
                        SMBarber chuyên về làm đẹp tóc và cung cấp các loại mỹ phẩm chăm sóc tóc.<br>
                        Thế mạnh SMBarber là các dịch vụ phục hồi tóc hư tổn, tạo kiểu tóc ngắn phù hợp với các bạn sinh viên
                    </p>
                    <p> @ViewBag.About   </p>
                    <a href="#services" data-scroll class="btn btn-light btn-radius btn-brd grd1 effect-1">Xem Thêm</a>
                </div><!-- end messagebox -->
            </div><!-- end col -->
            <div class="col-md-6 text-center">
                <div class="right-box">
                    <img class="img-fluid" src="~/Uploads/about-img.jpg" alt="" />
                </div>
            </div><!-- end col -->
        </div><!-- end row -->

        <hr class="hr1">

        <div class="row">
            <div class="col-md-12">
                <div class="about-tab">
                    <ul class="nav nav-pills nav-justified" id="myTab" role="tablist">
                        <li class="nav-item"><a class="nav-link active" href="#tab_a" data-toggle="tab">Sứ Mệnh</a></li>
                        <li class="nav-item"><a class="nav-link" href="#tab_b" data-toggle="tab">Tại Sao?</a></li>
                        <li class="nav-item"><a class="nav-link" href="#tab_c" data-toggle="tab">Về Chúng Tôi</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab_a">
                            <p>@ViewBag.Mission</p>

                        </div>
                        <div class="tab-pane fade" id="tab_b">
                            <p>@ViewBag.Reason</p>

                        </div>
                        <div class="tab-pane fade" id="tab_c">
                            <p>@ViewBag.About</p>
                        </div>
                    </div><!-- tab content -->
                </div>
            </div><!-- end col -->
        </div><!-- end row -->

        <hr class="hr1">

        <div class="row text-center">
            <div class="col-lg-12">
                <div class="section-title row text-center">
                    <div class="col-md-8 offset-md-2">
                        <h3>Kiểu Tóc</h3>
                    </div>
                </div><!-- end title -->
                <div class="owl-services owl-carousel owl-theme">
                    @foreach (var H in ViewBag.StyleHair)
                    {
                        <div class="service-widget">
                            <div class="post-media wow fadeIn">
                                <a href="~/Uploads/barber_01.jpg" data-rel="prettyPhoto[gal]" class="hoverbutton global-radius"><i class="flaticon-unlink"></i></a>
                                <img src="~/Uploads/barber_01.jpg" alt="" class="img-responsive img-rounded">
                            </div>
                            <div class="dit-box">
                                <h3>@H.Title</h3>
                                <p>@H.StyleDescription</p>
                            </div>
                        </div><!-- end service -->

                    }

                </div>
            </div>
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

<div id="pricing" class="section lb">
    <div class="container">
        <div class="section-title row text-center">
            <div class="col-md-8 offset-md-2">
                <h3>Giá Cắt Tóc</h3>
            </div>
        </div><!-- end title -->
        <div class="flex-items-xs-middle flex-items-xs-center"> 
            <div class="card text-center pb-1">
                <div class="card-block">
                    @foreach (var s in ViewBag.Services)
                    {
                        <div class="row">
                            <p style="font-size: 16px" class="col-6 pl-5 text-left">@s.Name</p>
                            <a class="col-6 pl-5 text-left text-dark font-weight-bold" href="#">@s.Price</a>
                        </div>
                    }
                    </div>
            </div>            
        </div>
    </div>
</div><!--end pricing-->

<div id="barbers" class="section lb">
    <div class="container">
        <div class="section-title row text-center">
            <div class="col-md-8 offset-md-2">
                <h3>Nhân Viên Tiêu Biểu</h3>
            </div>
        </div><!-- end title -->

        <div class="row dev-list text-center">
            @foreach (var b in ViewBag.Barbers)
            {
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                    <div class="widget our-inner-taem clearfix">
                        <div class="t-top"></div>
                        <div class="hover-br">
                            <img src="~/Uploads/barber_team_01.jpg" alt="" class="img-responsive">
                            <div class="social-up-hover">
                                <div class="footer-social">
                                    <a href="#" class="btn grd1"><i class="fa fa-facebook"></i></a>
                                    <a href="#" class="btn grd1"><i class="fa fa-github"></i></a>
                                    <a href="#" class="btn grd1"><i class="fa fa-twitter"></i></a>
                                    <a href="#" class="btn grd1"><i class="fa fa-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="team-box">
                            <div class="widget-title">
                                <h3>@b.Name</h3>
                                @if (b.isFounder == true)
                                {
                                    <p>Founder</p>
                                }
                                else
                                {
                                    <p>Barber</p>
                                }
                            </div>
                            <!-- end title -->
                            <p>@b.Info.</p>
                        </div>
                        <div class="t-bottom"></div>
                    </div><!--widget -->
                </div><!-- end col -->
            }
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->
<!--Footer-->
@{Html.RenderPartial("_Footer");}
